class Employee{
private String name=null;
private String position=low;
private double salary= 0 ;
private int experien=0 ;
private String eduLevel=null;

public Employee(String name,String position=low ,double salary , int experien, String eduLevel){
Employee(this);
this.name=name;
this.position=position;
this.salary= salary ;
this.experien=experien;
this.eduLevel=eduLevel;
}

public double setSalary(double sal){
this.salary=sal;
}
public int setexper(String exp){
this.experien=experien;
}

public double getSalary(){
return this.salary=sal;
}
public int getexper(){
return this.experien;
}







